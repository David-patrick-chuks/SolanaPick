{
  "name": "solanapick",
  "version": "1.0.0",
  "description": "A professional TypeScript SDK and backend for Solana payments, with hosted payment page and modular backend.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/types/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "jest && npm run test:integration",
    "test:unit": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev": "nodemon src/server/index.ts",
    "start": "node dist/server/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/David-patrick-chuks/SolanaPick.git"
  },
  "bugs": {
    "url": "https://github.com/David-patrick-chuks/SolanaPick/issues"
  },
  "homepage": "https://github.com/David-patrick-chuks/SolanaPick#readme",
  "keywords": [
    "solana",
    "pay",
    "web3",
    "sdk",
    "payment",
    "qr",
    "typescript",
    "open source"
  ],
  "author": "David-patrick-chuks <davidchuksdev@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@solana/web3.js": "^1.92.1",
    "bignumber.js": "^9.1.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "mongoose": "^8.16.4",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.10",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.25.0"
  }
}
